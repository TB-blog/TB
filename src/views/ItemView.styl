@require '../../lib/style/theme.styl'

.item-view-header
  background-color #fff
  padding 1.8em 2em 1em
  box-shadow 0 1px 2px rgba(0,0,0,.1)
  h1
    display inline
    font-size 1.5em
    margin 0
    margin-right .5em
  .labels, .meta, .meta a
    color #828282
  .meta a
    text-decoration underline
  .labels
    padding-right .4em
    line-height 2em

.item-view-comments
  background-color #fff
  margin-top 10px

.item-view-comments-header
  margin 0
  font-size 1.1em
  padding 1em 0
  position relative
  .spinner
    display inline-block
    margin -15px 0

.comment-children
  list-style-type none
  padding 0
  margin 0

.content
  img
    max-width 100%

@media (max-width 600px)
  .item-view-header
    h1
      font-size 1.25em