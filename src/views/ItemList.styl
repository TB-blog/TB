.repos-view
  padding-top 4px

.empty-item
  padding 15px 30px
  line-height 2em
  a
    color #3eaf7c
  code
    border-radius 2px
    border 1px dotted #666
    color #d4d5d6
    padding .25rem .5rem
    margin 0
    font-size .85em
    background-color rgba(27,31,35,.05)
    border-radius 3px

.list-nav, .list
  border-radius 2px

.bio
  padding 15px 30px
  text-align left
  blockquote
    font-size 16px;
    color #999
    border-left .25rem solid #42b983
    margin-left 0
    padding-left 1rem

.list-nav
  padding 15px 30px
  text-align left
  a
    color #3eaf7c
  span
    margin 0 1em
  .disabled
    color #444

.list
  margin 30px 0
  width 100%
  transition all .5s cubic-bezier(.55,0,.1,1)
  ul
    list-style-type none
    padding 0
    margin 0

.slide-left-enter, .slide-right-leave-to
  opacity 0
  transform translate(30px, 0)

.slide-left-leave-to, .slide-right-enter
  opacity 0
  transform translate(-30px, 0)

.item-move, .item-enter-active, .item-leave-active
  transition all .5s cubic-bezier(.55,0,.1,1)

.item-enter
  opacity 0
  transform translate(30px, 0)

.item-leave-active
  position absolute
  opacity 0
  transform translate(30px, 0)

@media (max-width 600px)
  .bio
    blockquote
      font-size 14px

  .list
    margin 10px 0
